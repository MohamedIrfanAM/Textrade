model users {
  id          String     @id @default(uuid())
  user_name   String
  name        String
  email       String
  about       String
  year        String
  branch      branches   @relation(fields: [branchId], references: [id])
  branchId    String
  college     colleges   @relation(fields: [collegeId], references: [id])
  collegeId   String
  cart        cart?
  products    products[]
  profile_pic images     @relation(fields: [profile_pic], references: [id])
}

model products {
  id          String     @id @default(uuid())
  name        String
  price       Decimal
  description String
  location    String
  category    categories @relation(fields: [categoryId], references: [id])
  categoryId  String
  carts       cart[]     @relation("CartToProduct")
  seller      users      @relation(fields: [sellerId], references: [id])
  sellerId    String
  images      images[]
}

model cart {
  id       String     @id @default(uuid())
  products products[] @relation("CartToProduct")
  user     users      @relation(fields: [userId], references: [id])
  userId   String     @unique
}

model images {
  id        String   @id @default(uuid())
  url       String
  product   products @relation(fields: [productId], references: [id])
  productId String
  users     users    @relation(fields: [userId], references: [id])
  userId    String   @unique
}

model categories {
  id       String     @id @default(uuid())
  name     String
  products products[]
}

model colleges {
  id       String     @id @default(uuid())
  name     String
  branches branches[] @relation("CollegeBranch")
  users    users[]
}

model branches {
  id       String     @id @default(uuid())
  name     String
  colleges colleges[] @relation("CollegeBranch")
  users    users[]
}
